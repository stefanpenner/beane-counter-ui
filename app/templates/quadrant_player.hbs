<div {{bind-attr class=":quadrant-popup content:player-present"}}>
  {{#if profile}}
    <ul>
      <li><span>At Bats</span>  {{round profile.atbats}}</li>
      <li><span>Hits</span>     {{round profile.hits}}</li>
      <li><span>Hotness</span>  {{quadrant-value hotness}}</li>
      <li><span>Goodness</span> {{quadrant-value goodness}}</li>
      <li><span>Hrs</span>      {{round profile.hrs}}</li>
      <li><span>Walks</span>    {{round profile.walks}}</li>
    </ul>

    <div class="profile-pic-container">
      <img class="profile-pic" {{bind-attr src=imageUrl}} />
    </div>
  {{else}}
    <img class="loading-spinner" src="/ajax-loader.gif" alt="Loading..." />
  {{/if}}

  <div class="footer">
    {{#if profile}}
      {{profile.fullname}}
    {{else}}
      Loading...
    {{/if}}
  </div>
</div>
