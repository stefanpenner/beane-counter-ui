<div class='player'>
  {{#if generator}}
    <button {{bind-attr class=':play-button isPlaying:inactive'}} {{action 'play'}}>&#9658;</button>
    <button {{bind-attr class=':pause-button isPlaying::inactive'}} {{action 'pause'}}>&#10074;&#10074;</button>

    <div class='player-progress-bar-container'>

      {{#if progressText}}
        <div class='player-progress-text-display' {{bind-attr style='progressTextStyle'}}>{{progressText}}</div>
      {{/if}}

      <div class='player-progress-bar' {{bind-attr style='progressBarStyle'}}></div>

      {{#if showNub}}
        {{input value=nubProgress step='0.01' min='0' max='1' type='range' class='player-range-input'}}
      {{/if}}
    </div>
    <div class='label'>
      <span class='count'>{{precision progressPercentage 100}}</span>&nbsp;%
    </div>
  {{else}}
    <p>Waiting for generator...</p>
  {{/if}}
</div>
